<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5583ff"
    tools:context="com.example.admin.gpstrackerapp.AlarmActivity">


    <Button
        android:id="@+id/alarm_btn"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:background="@drawable/alarm_btn"
        android:onClick="play"
        android:layout_marginTop="110dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="129dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/alarm_btn"
        android:layout_marginTop="100dp"
        android:text="Press Above button In case of emergency"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="15dp"
        android:textStyle="bold"/>
</RelativeLayout>
